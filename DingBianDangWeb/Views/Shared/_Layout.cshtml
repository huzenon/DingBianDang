@{
    var AppName = "DingBianDang";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@AppName @ViewBag.Title</title>
    @Styles.Render("~/base/css")
    @RenderSection("css", false)
</head>
<body>

    <header>
        <nav class="navbar navbar-inverse" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <img class="navbar-brand" src="~/Images/Z.png" />
                    <a class="navbar-brand" href="/">@AppName</a>
                    <button type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <p class="navbar-text">@User.Identity.Name</p>
                        </li>
                        <li>
                            <a href="javascript:void(0)" onclick="div.loginform()">登入</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Register","Account")">註冊</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div id="ajaxload"></div>
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer>
        <hr />
        <p>Copyright &copy; @DateTime.Now.Year by Zenon</p>
    </footer>

    @Scripts.Render("~/base/js/jquery")
    @Scripts.Render("~/base/js/bootstrap")
    @Scripts.Render("~/Scripts/_Layout.js")
    @RenderSection("script", false)
</body>
</html>

